.back_cross
  = link_to "X",
    root_path

.containernew_ins
  center
    .background_signup
      .header
        = image_tag "logo_mob.png"
        div
          | My Office
          span.bookerblack
            | Booker
      br
      .login
        form.login-form
          | Inscription Utilisateur
        br
        = simple_form_for :booker, url: booker_registration_path do |f|
          = f.error_notification
          = f.input :email,
            required: true,
            label: false,
            placeholder: 'Courriel'
          = f.input :password,
            required: true,
            label: false,
            placeholder: 'Mot de passe'
          = f.input :password_confirmation,
            required: true,
            label: false,
            placeholder: 'Confirmation du mot de passe'
          = f.input :firstname,
            required: true,
            label: false,
            placeholder: 'Nom'
          = f.input :lastname,
            required: true,
            label: false,
            placeholder: 'Prénom'
          = f.button :submit,
            "S'inscrire"

          p.messages
            | Vous avez déjà un compte?
            = link_to " Se connecter",
              booker_session_path
