  /!/ Range slider - gravity forms
     $( function() {
       $( "#slider-range" ).slider({
         range: true,
         min: 0,
         max: 1000,
         step: 100,
         values: [ 0, 1000 ],
         slide: function( event, ui ) {
           $( "#amount" ).val( "$" + ui.values[ 0 ] + " - $" + ui.values[ 1 ] );
         }
       });
